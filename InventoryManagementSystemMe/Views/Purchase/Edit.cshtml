@model InventoryManagementSystemMe.Models.Purchase

<h2>Edit Purchase</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="PurchaseID" /> <!-- Hidden field to store PurchaseID -->

    <div class="form-group">
        <label asp-for="ProductName" class="control-label"></label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PurchasedPrice" class="control-label"></label>
        <input asp-for="PurchasedPrice" class="form-control" />
        <span asp-validation-for="PurchasedPrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantity" class="control-label"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="TotalPrice" class="control-label"></label>
        <input asp-for="TotalPrice" class="form-control" />
        <span asp-validation-for="TotalPrice" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="PurchasedDate" class="control-label"></label>
        <input asp-for="PurchasedDate" class="form-control" type="date"/>
        <span asp-validation-for="PurchasedDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

