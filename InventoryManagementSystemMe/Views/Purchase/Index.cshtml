@model IEnumerable<InventoryManagementSystemMe.Models.Purchase>

<h2>Purchase List</h2>
<div class="table-responsive">
<table class="table table-striped table-hover">
    <thead class="table-primary">
        <tr>
            <th>Product Name</th>
            <th>Purchased Price</th>
            <th>Quantity</th>
            <th>Total Price</th>
            <th>Purchased Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var purchase in Model)
        {
            <tr>
                <td>@purchase.ProductName</td>
                <td>@purchase.PurchasedPrice</td>
                <td>@purchase.Quantity</td>
                <td>@purchase.TotalPrice</td>
                <td>@purchase.PurchasedDate.ToShortDateString()</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@purchase.PurchaseID">Edit</a> |
                    <a class="btn btn-sm btn-primary" asp-action="Delete" asp-route-id="@purchase.PurchaseID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
<a class="btn btn-success" asp-action="Create">Add New Purchase</a>
