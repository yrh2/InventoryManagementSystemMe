@model InventoryManagementSystemMe.Models.Purchase

<h2>Delete Purchase</h2>

<h3>Are you sure you want to delete this purchase?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Product Name
        </dt>
        <dd class="col-sm-10">
            @Model.ProductName
        </dd>
        <dt class="col-sm-2">
            Purchased Price
        </dt>
        <dd class="col-sm-10">
            @Model.PurchasedPrice
        </dd>
        <dt class="col-sm-2">
            Quantity
        </dt>
        <dd class="col-sm-10">
            @Model.Quantity
        </dd>
        <dd>
        <dt class="col-sm-2">
            Total Price
        </dt>
        <dd class="col-sm-10">
                @Model.TotalPrice
        </dd>
		<dt class="col-sm-2">
            Purchased Date
        </dt>
        <dd class="col-sm-10">
            @Model.PurchasedDate.ToShortDateString()
        </dd>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="PurchaseID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
