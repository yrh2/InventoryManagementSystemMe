@model InventoryManagementSystemMe.Models.Product

<h2>Delete Product</h2>

<h3>Are you sure you want to delete this product?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Product Name
        </dt>
        <dd class="col-sm-10">
            @Model.ProductName
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Model.Price
        </dd>
        <dt class="col-sm-2">
            Quantity
        </dt>
        <dd class="col-sm-10">
            @Model.ProductQuantity
        </dd>
		<dd>
		<dt class="col-sm-2">
			Supplier Name
		</dt>
		<dd class="col-sm-10">
				@Model.SupplierName
		</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ProductID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
