@model IEnumerable<InventoryManagementSystemMe.Models.Product>

<h2 class="mb-4">Products List</h2>
<div class="table-responsive">
<table class="table table-striped table-hover">
    <thead class="table-primary">
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Supplier Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
                <tr>
				    <td>@product.ProductID</td>
                    <td>@product.ProductName</td>
                    <td>@product.Price</td>
                    <td>@product.ProductQuantity</td>
                    <td>@product.SupplierName</td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@product.ProductID">Edit</a> |
                        <a class="btn btm-sm btn-danger" asp-action="Delete" asp-route-id="@product.ProductID">Delete</a>
                    </td>
                </tr>
        }
    </tbody>
</table>
</div>

    <a class="btn btn-success" asp-action="Create">Add New Product</a>

