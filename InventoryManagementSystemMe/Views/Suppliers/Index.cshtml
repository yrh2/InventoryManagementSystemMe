@model IEnumerable<InventoryManagementSystemMe.Models.Supplier>

<h2 class="mb-4">Supplier List</h2>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-primary">
            <tr>
                <th>Supplier ID</th>
                <th>Supplier Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var supplier in Model)
            {
                <tr>
                    <td>@supplier.SupplierID</td>
                    <td>@supplier.SupplierName</td>
                    <td>@supplier.Phone</td>
                    <td>@supplier.Email</td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@supplier.SupplierID">Edit</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@supplier.SupplierID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<a class="btn btn-success" asp-action="Create">Add New Supplier</a>
